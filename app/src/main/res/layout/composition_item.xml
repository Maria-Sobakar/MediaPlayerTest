<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="112dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/labelCardViewVertical"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/labelImageViewVertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/titleTextViewVertical"
        android:layout_width="0dp"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/authorTextViewVertical"
        app:layout_constraintEnd_toStartOf="@id/typeTextViewVertical"
        app:layout_constraintStart_toEndOf="@+id/labelCardViewVertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="titletitletitletitletitletitletitletitletitletitletitletitletitle" />

    <TextView
        android:id="@+id/authorTextViewVertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/typeTextViewVertical"
        app:layout_constraintStart_toEndOf="@+id/labelCardViewVertical"
        app:layout_constraintTop_toBottomOf="@+id/titleTextViewVertical"
        tools:text="author" />

    <TextView
        android:id="@+id/typeTextViewVertical"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text=".mp3"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@id/titleTextViewVertical"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/light_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/labelCardViewVertical"
        app:layout_constraintStart_toStartOf="@id/titleTextViewVertical"
        app:layout_constraintTop_toBottomOf="@id/authorTextViewVertical"
        android:layout_marginEnd="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>